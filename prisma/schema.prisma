generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @unique @default(cuid())
  name  String
  email String
  Book  Book[]
}

model Book {
  id        String  @id @unique @default(cuid())
  body      String
  author    String
  createdAt String
  userId    String?
  User      User?   @relation(fields: [userId], references: [id])
}
